{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "build/www/app",
    "paths": {
      "app/*": [
        "src/main/webapp/app/*"
      ]
    },
    "removeComments": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "webpack-env",
      "jest"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/main/webapp/app/typing.d.ts",
    "src/main/webapp/app/**/*",
    "src/test/javascript/spec/**/*"
  ]
}
